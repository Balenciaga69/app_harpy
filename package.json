{
  "name": "frontend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "start": "pnpm --filter @app-harpy/frontend start",
    "build": "pnpm --filter @app-harpy/frontend build",
    "build:core": "pnpm --filter @app-harpy/game-core build",
    "lint": "pnpm --filter @app-harpy/frontend lint",
    "lint:game-core": "pnpm --filter @app-harpy/game-core lint",
    "lint:fix:game-core": "pnpm --filter @app-harpy/game-core lint:fix",
    "lint:fix": "pnpm --filter @app-harpy/frontend lint:fix",
    "check": "pnpm --filter @app-harpy/frontend check",
    "check:cic": "madge --circular --extensions ts,tsx packages/game-core/src packages/frontend/src",
    "check:deps": "madge --image dev_log/combat-deps.svg --extensions ts,tsx packages/game-core/src packages/frontend/src",
    "preview": "pnpm --filter @app_harpy/frontend preview",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx}\""
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "madge": "^8.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.4.2",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee"
}
