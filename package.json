{
  "name": "app-harpy-monorepo",
  "private": true,
  "version": "0.0.0",
  "description": "Game core monorepo with frontend and backend",
  "scripts": {
    "start": "pnpm --filter @app-harpy/frontend start",
    "dev": "pnpm --filter @app-harpy/frontend dev",
    "build": "pnpm -r build",
    "build:frontend": "pnpm --filter @app-harpy/frontend build",
    "build:core": "pnpm --filter @app-harpy/xo-c build",
    "build:backend": "pnpm --filter xo-b build",
    "lint": "pnpm -r lint",
    "lint:fix": "pnpm -r lint:fix",
    "lint:import": "eslint . --ext .ts,.tsx,.js,.jsx",
    "check": "pnpm -r check",
    "check:cic": "madge --circular --extensions ts,tsx packages/*/src",
    "check:deps": "madge --image dev_log/deps.svg --extensions ts,tsx packages/*/src",
    "format": "prettier --write \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"packages/**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rm -rf node_modules",
    "preview": "pnpm --filter @app-harpy/frontend preview",
    "test": "pnpm -r test",
    "test:watch": "pnpm -r test:watch"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.1",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "autoprefixer": "^10.4.22",
    "cloc": "2.6.0-cloc",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-boundaries": "^5.3.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.24",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "eslint-plugin-unused-imports": "^4.3.0",
    "globals": "^16.5.0",
    "jest": "^30.0.0",
    "madge": "^8.0.0",
    "postcss": "^8.5.3",
    "prettier": "^3.4.2",
    "rimraf": "^5.0.5",
    "ts-jest": "^29.2.5",
    "ts-morph": "^27.0.2",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0"
  },
  "packageManager": "pnpm@9.12.3+sha512.cce0f9de9c5a7c95bef944169cc5dfe8741abfb145078c0d508b868056848a87c81e626246cb60967cbd7fd29a6c062ef73ff840d96b3c86c40ac92cf4a813ee",
  "dependencies": {
    "nanoid": "^5.1.6",
    "repomix": "^1.11.0"
  }
}
