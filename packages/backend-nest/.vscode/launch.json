{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS (ts-node)",
      "program": "${workspaceFolder}/src/main.ts",
      "runtimeArgs": ["-r", "tsconfig-paths/register", "-r", "ts-node/register"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
