{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/backend-nest/src/main.ts",
      "preLaunchTask": "npm: build",
      "outFiles": ["${workspaceFolder}/backend-nest/dist/**/*.js"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "resolveSourceMapLocations": [
        "${workspaceFolder}/backend-nest/dist/**/*.js",
        "${workspaceFolder}/backend-nest/node_modules/**"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Debug NestJS (ts-node)",
      "program": "${workspaceFolder}/backend-nest/src/main.ts",
      "runtimeArgs": ["-r", "tsconfig-paths/register", "-r", "ts-node/register"],
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen"
    }
  ]
}
